@model Coffee_POS.Models.Product
@{
    ViewBag.Title = "Add Product";
}

<h3 class="fw-bold mb-3">Add New Product</h3>

<form method="post" enctype="multipart/form-data">
    <div class="row">

        <div class="col-md-6">
            <label class="form-label fw-bold">Product Name</label>
            <input type="text" name="Name" class="form-control" required />

            <label class="form-label fw-bold mt-3">Description</label>
            <textarea name="Description" rows="4" class="form-control"></textarea>

            <label class="form-label fw-bold mt-3">Category</label>
            <select name="CategoryId" class="form-control" required>
                <option value="">-- select category --</option>
                @foreach (var c in ViewBag.Categories)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">Price</label>
            <input type="number" step="0.01" name="Price" class="form-control" required />

            <label class="form-label fw-bold mt-3">Quantity</label>
            <input type="number" name="Qty" class="form-control" required />

            <label class="form-label fw-bold mt-3">Product Image</label>
            <input type="file" name="image" class="form-control" accept="image/*" />

            <p class="text-muted mt-1">Max 2MB</p>
        </div>

    </div>

    <button class="btn btn-success mt-4">
        <i class="fa fa-save"></i> Save Product
    </button>
    <a href="/Product/Index" class="btn btn-secondary mt-4">Cancel</a>
</form>
