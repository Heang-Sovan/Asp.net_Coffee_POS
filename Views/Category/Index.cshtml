@model IEnumerable<Coffee_POS.Models.Category>

<h3 class="fw-bold mb-3">Category List</h3>

<a href="/Category/Create" class="btn btn-primary mb-3">
    <i class="fa fa-plus"></i> Add Category
</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th width="150">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>
                    <a href="/Category/Edit/@c.Id" class="btn btn-warning btn-sm">Edit</a>

                    <a href="/Category/Delete/@c.Id"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Delete this category?')">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
