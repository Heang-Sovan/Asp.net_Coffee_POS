@model IEnumerable<Coffee_POS.Models.Purchase>
@{
    ViewBag.Title = "Purchases";
}

<h3 class="fw-bold mb-3">Purchase History</h3>

<div class="d-flex justify-content-between mb-3">
    <a href="/Purchase/Create" class="btn btn-primary">
        <i class="fa fa-plus"></i> New Purchase
    </a>
</div>

<table class="table table-striped shadow-sm bg-white">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Supplier</th>
            <th>Total ($)</th>
            <th>Date</th>
            <th>Items</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>

                <td>@p.Supplier?.Name</td>

                <td>$@p.TotalAmount</td>

                <td>@p.CreatedAt?.ToString("yyyy-MM-dd")</td>

                <td>
                    <ul class="mb-0">
                        @foreach (var i in p.Items)
                        {
                            <li>@i.Ingredient?.Name - @i.Quantity units</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
