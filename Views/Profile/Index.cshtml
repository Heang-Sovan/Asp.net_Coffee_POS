@model Coffee_POS.Models.User
@{
    ViewBag.Title = "My Profile";
}

<div class="container mt-4" style="max-width: 650px;">
    <h3 class="fw-bold mb-4">My Profile</h3>

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">
            <i class="fa fa-check-circle"></i> @TempData["success"]
        </div>
    }

    <div class="card shadow-sm p-4">
        <div class="d-flex align-items-center mb-3">
            <i class="fa-solid fa-circle-user fa-4x text-secondary me-3"></i>

            <div>
                <h4 class="fw-bold mb-1">@Model.Name</h4>
                <p class="text-muted mb-0">@Model.Email</p>
            </div>
        </div>

        <hr />

        <p><strong>Role:</strong> @Model.Role</p>
        <p><strong>Created At:</strong> @Model.CreatedAt?.ToString("yyyy-MM-dd")</p>

        <a class="btn btn-primary mt-3" href="/Profile/Edit/@Model.Id">
            <i class="fa fa-edit"></i> Edit Profile
        </a>
    </div>
</div>
