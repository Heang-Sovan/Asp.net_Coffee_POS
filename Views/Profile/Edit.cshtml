@model Coffee_POS.Models.User
@{
    ViewBag.Title = "Edit Profile";
}

<div class="container mt-4" style="max-width: 650px;">
    <h3 class="fw-bold mb-3">Edit Profile</h3>

    <div class="card shadow-sm p-4">

        <form method="post" action="/Profile/Update">

            <input type="hidden" name="id" value="@Model.Id" />

            <div class="mb-3">
                <label class="form-label fw-bold">Full Name</label>
                <input type="text" name="name" class="form-control" value="@Model.Name" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input type="email" name="email" class="form-control" value="@Model.Email" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">New Password</label>
                <input type="password" name="newPassword" class="form-control"
                       placeholder="Leave blank if you don't want to change password" />
            </div>

            <button type="submit" class="btn btn-success mt-2">
                <i class="fa fa-save"></i> Save Changes
            </button>

            <a class="btn btn-secondary mt-2" href="/Profile/Index">Cancel</a>
        </form>

    </div>
</div>
